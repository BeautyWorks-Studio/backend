import json

config = {
    "version": 2,
    "builds": [
        {
            "src": "run.py", 
            "use": "@vercel/python",
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "run.py",
        }
    ],
}

if __name__ == "__main__":
    with open("vercel.json", "w") as f:
        json.dump(config, f, indent=2)
        print("vercel.json has been generated successfully.")
